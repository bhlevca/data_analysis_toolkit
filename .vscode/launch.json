{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üåê Streamlit App",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/src/data_toolkit/streamlit_app.py",
                "--server.port", "8501",
                "--server.headless", "true"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "üöÄ Run Streamlit Launcher",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_streamlit.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "üìÑ Current Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "üß™ Run All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/tests",
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "üß™ Run Current Test File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "üìä Jupyter Notebook",
            "type": "debugpy",
            "request": "launch",
            "module": "jupyter",
            "args": [
                "notebook",
                "--notebook-dir=${workspaceFolder}/notebooks"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "üîß Benchmark Rust vs Python",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/benchmark_rust_vs_python.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "üì¶ Install Package (Editable)",
            "type": "debugpy",
            "request": "launch",
            "module": "pip",
            "args": [
                "install",
                "-e",
                "${workspaceFolder}"
            ],
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "üîÑ Install & Run Streamlit",
            "configurations": ["üì¶ Install Package (Editable)", "üåê Streamlit App"],
            "stopAll": true
        }
    ]
}
